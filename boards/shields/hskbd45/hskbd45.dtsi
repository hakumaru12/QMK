/*
 * HSKBD45 common shield configuration
 * Matrix: 4 rows x 7 cols (per half)
 * Diode direction: COL2ROW
 * Serial (TRRS): D0
 */

#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform;
    };

    /* 左半分のみ transform（右は col-offset で上書き） */
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <14>;
        rows = <4>;

        /*
         * レイアウト（左6列 + 右6列 = 12キー/行、最終行は親指キー）
         * QMK keyboard.json の layout に合わせた配置
         *
         * Left:  col 0-5  (matrix col 0-5)
         * Right: col 6-11 (matrix col 7-12 → offset 7)
         *
         * Row0: L[0,0] L[0,1] L[0,2] L[0,3] L[0,4] L[0,5]   R[4,0] R[4,1] R[4,2] R[4,3] R[4,4] R[4,5]
         * Row1: L[1,0] L[1,1] L[1,2] L[1,3] L[1,4] L[1,5]   R[5,0] R[5,1] R[5,2] R[5,3] R[5,4] R[5,5]
         * Row2: L[2,0] L[2,1] L[2,2] L[2,3] L[2,4] L[2,5]   R[6,0] R[6,1] R[6,2] R[6,3] R[6,4] R[6,5]
         * Row3: L[3,0] L[3,1] L[3,3] L[3,4] L[3,5] L[3,6]   R[7,0] R[7,1] R[7,2] R[7,4] R[7,5]
         *
         * ※ QMK では Row3 に col2 が欠け（エンコーダー位置）、右Row3 に col3 が欠け
         */
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)    RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11) RC(0,12)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)    RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11) RC(1,12)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)    RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11) RC(2,12)
            RC(3,0) RC(3,1)         RC(3,3) RC(3,4) RC(3,5) RC(3,6)    RC(3,7) RC(3,8) RC(3,9)          RC(3,11) RC(3,12)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";

        col-gpios
            = <&pro_micro 19 GPIO_ACTIVE_HIGH>  /* F4 */
            , <&pro_micro 18 GPIO_ACTIVE_HIGH>  /* F5 */
            , <&pro_micro 17 GPIO_ACTIVE_HIGH>  /* F6 */
            , <&pro_micro 16 GPIO_ACTIVE_HIGH>  /* F7 */
            , <&pro_micro 9  GPIO_ACTIVE_HIGH>  /* B1 */
            , <&pro_micro 11 GPIO_ACTIVE_HIGH>  /* B3 */
            , <&pro_micro 10 GPIO_ACTIVE_HIGH>  /* B2 */
            ;

        row-gpios
            = <&pro_micro 4  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  /* D4 */
            , <&pro_micro 5  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  /* C6 */
            , <&pro_micro 6  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  /* D7 */
            , <&pro_micro 7  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  /* E6 */
            ;
    };

    /* エンコーダー定義（左右共通ピン B5, B4） */
    encoder_left: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&pro_micro 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;  /* B4 */
        b-gpios = <&pro_micro 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; /* B5 */
        steps = <80>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&encoder_left>;
        triggers-per-rotation = <20>;
    };
};
