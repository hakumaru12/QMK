#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <14>;
        rows = <4>;
        map = <
            RC(0,0)  RC(0,1)  RC(0,2)  RC(0,3)  RC(0,4)  RC(0,5)   RC(0,7)  RC(0,8)  RC(0,9)  RC(0,10) RC(0,11) RC(0,12)
            RC(1,0)  RC(1,1)  RC(1,2)  RC(1,3)  RC(1,4)  RC(1,5)   RC(1,7)  RC(1,8)  RC(1,9)  RC(1,10) RC(1,11) RC(1,12)
            RC(2,0)  RC(2,1)  RC(2,2)  RC(2,3)  RC(2,4)  RC(2,5)   RC(2,7)  RC(2,8)  RC(2,9)  RC(2,10) RC(2,11) RC(2,12)
            RC(3,0)  RC(3,1)  RC(3,3)  RC(3,4)  RC(3,5)  RC(3,6)   RC(3,7)  RC(3,8)  RC(3,9)  RC(3,11) RC(3,12)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;

        /*
         * QMK pin → nice!nano nRF pin
         * F4 → P0.31, F5 → P0.29, F6 → P0.02, F7 → P1.15
         * B1 → P1.13, B3 → P1.11, B2 → P0.10
         */
        col-gpios
            = <&gpio0 31 GPIO_ACTIVE_HIGH>  /* F4 */
            , <&gpio0 29 GPIO_ACTIVE_HIGH>  /* F5 */
            , <&gpio0  2 GPIO_ACTIVE_HIGH>  /* F6 */
            , <&gpio1 15 GPIO_ACTIVE_HIGH>  /* F7 */
            , <&gpio1 13 GPIO_ACTIVE_HIGH>  /* B1 */
            , <&gpio1 11 GPIO_ACTIVE_HIGH>  /* B3 */
            , <&gpio0 10 GPIO_ACTIVE_HIGH>  /* B2 */
            ;

        /*
         * D4 → P0.17, C6 → P0.20, D7 → P0.13, E6 → P0.24
         * (nice!nano v2 対応値)
         */
        row-gpios
            = <&gpio0 17 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  /* D4 */
            , <&gpio0 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  /* C6 */
            , <&gpio0 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  /* D7 */
            , <&gpio0 24 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  /* E6 */
            ;
    };

    encoder_left: encoder_left {
        compatible = "alps,ec11";
        /* B4 → P1.06 (nice!nano v2), B5 → P1.04 */
        a-gpios = <&gpio1  6 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;  /* B4 */
        b-gpios = <&gpio1  4 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;  /* B5 */
        steps = <80>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&encoder_left>;
        triggers-per-rotation = <20>;
    };
};
